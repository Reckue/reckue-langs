{
  "name": "Interactive language coach",
  "version": "0.3.5",
  "description": "Interactive language learning assistant",
  "permissions": ["storage", "activeTab", "declarativeContent"],
  "background": {
    "scripts": ["global/application.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "popup/images/coach16.png",
      "32": "popup/images/coach32.png",
      "48": "popup/images/coach48.png",
      "128": "popup/images/coach128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["https://translate.google.com/*", "http://localhost:*/*"],
      "run_at": "document_idle",
      "js": [
        "page/enum/Levels.js",
        "page/classes/Logger.js",
        "page/classes/builder/InteractiveWord.js",
        "page/classes/builder/WordPopup.js",
        "page/classes/builder/DOMBuilder.js",
        "page/classes/MockWordbook.js",
        "page/classes/Parser.js",

        "page/wordbook.js",

        "page/mocks.js",
        "page/start.js"
      ]
    }
  ],
  "icons": {
    "16": "popup/images/coach16.png",
    "32": "popup/images/coach32.png",
    "48": "popup/images/coach48.png",
    "128": "popup/images/coach128.png"
  },
  "manifest_version": 2
}
